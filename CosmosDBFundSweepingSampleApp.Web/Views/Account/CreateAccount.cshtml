
@model CreateAccountViewModel
@{
    ViewData["Title"] = "CreateAccount";
}

<div class="py-5 text-center">
    <h2>Create account</h2>
    <p class="lead">create account detail by filling the form below.</p>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2 order-md-1">
        <form asp-controller="account" asp-action="createaccount" method="post" class="needs-validation" novalidate>
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.Error
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="AccountName">Account Name</label>
                    <input type="text" class="form-control" asp-for="AccountName" placeholder="" required>
                    <div class="invalid-feedback">
                        Valid account name is required
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="AccountNumber">Account Number</label>
                    <input type="number" class="form-control" asp-for="AccountNumber" placeholder="" required>
                    <div class="invalid-feedback">
                        Valid account number is required.
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="BankId">Bank</label>
                    <select class="custom-select d-block w-100" asp-for="BankId" asp-items="ViewBag.Banks" required>
                        <option value="" selected> Please select</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a valid bank.
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="country"></label>
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts
{
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}

